@{
    ViewBag.Title = "Mua bán ký gửi máy đào Bitcoin";
}

<div ng-app="App"
     ng-controller="HomeController">
    <!-- Header -->
    <header class="masthead">
        <div class="container">
            <div class="intro-text">
                <div class="intro-heading">Mua Bán - Ký Gửi</div>
                <h1>Máy đào Bitcoin</h1>
                <br>
                <div class="wrapper">
                    <a class="top-contact nav-link js-scroll-trigger" href="mailto:muabankygoimaydao@gmail.com"><i class="fa fa-envelope-o"></i> muabankygoimaydao@gmail.com</a>
                    <br>
                    <a class="top-contact nav-link js-scroll-trigger" href="tel:0908255504"><i class="fa fa-phone-square"></i> 090 82 555 04 Mr Thiện</a>
                    <br>
                    <a class="top-contact nav-link js-scroll-trigger" href="#map"><i class="fa fa-map-marker"></i> Số 55 Nguyễn Chánh Sắt, P. 13, Q. Tân Bình, TP.HCM</a>
                </div>
                <a class="btn btn-xl js-scroll-trigger" href="#service">Các dịch vụ của chúng tôi</a>
            </div>

            <div class="row" style="display: inline-block;">
                <marquee class="marquee" 
                         direction="left" 
                         onmousedown="this.stop();" 
                         scrollamount="12"
                         onmouseup="this.start();">
                    <div class="exchangeEl" ng-repeat="p in listPrices track by $index">
                        <div class="exchangePrice" style="text-align: center">
                            <span>[ {{p.Summary.MarketName}} ]</span>
                        </div>
                        <div class="exchangePrice">
                            <span>LAST</span>
                            <span>-</span>
                            <span>$ {{p.Summary.Last}}</span>
                        </div>
                        <div class="exchangePrice">
                            <span>HIGH</span>
                            <span>-</span>
                            <span style="color: #f6bf01;">$ {{p.Summary.High}}</span>
                        </div>
                        <div class="exchangePrice">
                            <span>LOW</span>
                            <span>-</span>
                            <span style="color: red;">$ {{p.Summary.Low}}</span>
                        </div>
                    </div>
                </marquee>
            </div>

            @* marquee *@
            <script>
                $(document).ready(function () {
                    if ($('.marquee').length != 0) {
//                        $('.marquee').marquee({
//                            duration: 2000,
//                            duplicated: true,
//                            startVisible: true
//                        });
                    }
                });

            </script>

        </div>



        <div class="fade-header">
        </div>
    </header>


    <!-- Services -->
    <section id="service">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Dịch vụ của chúng tôi</h2>
                    <h3 class="section-subheading text-muted">Luôn luôn sẵn sàng phục vụ bạn mọi lúc mọi nơi.</h3>
                </div>
            </div>
            <div class="row text-center">
                <div class="col-md-3">
                    <a href="/Service/Ky-Gui" style="text-decoration: none">
                        <span class="fa-stack fa-4x">
                            <i class="fa fa-circle fa-stack-2x text-primary"></i>
                            <i class="fa fa-cart-arrow-down fa-stack-1x fa-inverse"></i>
                        </span>
                    </a>
                    <h4 class="service-heading"><a href="/Service/Ky-Gui" style="text-decoration: none">Ký Gửi</a></h4>
                    <p class="text-muted">Đội ngũ kĩ thuật chăm sóc 24/7, vệ sinh máy, giá cả hợp lí nhất, thu mua máy đào</p>
                </div>

                <div class="col-md-3">
                    <a href="/Service/Trao-Doi-Coin" style="text-decoration: none">
                        <span class="fa-stack fa-4x">
                            <i class="fa fa-circle fa-stack-2x text-primary"></i>
                            <i class="fa fa-cart-arrow-down fa-stack-1x fa-inverse"></i>
                        </span>
                    </a>
                    <h4 class="service-heading"><a href="/Service/Trao-Doi-Coin" style="text-decoration: none">Trao Đổi Coin</a></h4>
                    <p class="text-muted">Mua bán các đồng coin</p>
                </div>

                <div class="col-md-3">
                    <a href="/Service/Trade-Coin" style="text-decoration: none">
                        <span class="fa-stack fa-4x">
                            <i class="fa fa-circle fa-stack-2x text-primary"></i>
                            <i class="fa fa-retweet fa-stack-1x fa-inverse"></i>
                        </span>
                    </a>
                    <h4 class="service-heading"><a href="/Service/Trade-Coin" style="text-decoration: none">Trade Coin</a></h4>
                    <p class="text-muted">Tạo thêm một nguồn thu nhập thụ động cho khách hàng</p>
                </div>

                <div class="col-md-3">
                    <a href="/Service/Lap-Dat-Bao-Tri" style="text-decoration: none">
                        <span class="fa-stack fa-4x">
                            <i class="fa fa-circle fa-stack-2x text-primary"></i>
                            <i class="fa fa-wrench fa-stack-1x fa-inverse"></i>
                        </span>
                    </a>
                    <h4 class="service-heading"><a href="/Service/Lap-Dat-Bao-Tri" style="text-decoration: none">Lắp Đặt - Bảo Trì Hệ Thống</a></h4>
                    <p class="text-muted">Setup những dàn máy tốt nhất cho khách hàng</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Portfolio Grid -->
    <section class="bg-light" id="product">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Sản phẩm của chúng tôi</h2>
                    <h3 class="section-subheading text-muted">Luôn luôn đổi mới công nghệ nhằm mang đến những hệ thống làm việc mạnh nhất, tối ưu nhất cho khách hàng!</h3>
                </div>
            </div>
            <div class="row">

                <div class="col-md-4 col-sm-6 portfolio-item" ng-repeat="p in listProducts track by $index" ng-show="$index < 6 && p.Status != 'hide'">
                    <a class="portfolio-link" data-toggle="modal" href="#portfolioModal{{$index}}">
                        <div class="portfolio-hover">
                            <div class="portfolio-hover-content">
                                <i class="fa fa-search-plus fa-3x"></i>
                            </div>
                        </div>
                        <img class="img-fluid" src="{{p.Images[0].Url}}" alt="image">
                    </a>
                    <div class="portfolio-caption">
                        <h4>{{p.Title}}</h4>
                        <p class="text-muted">{{getShortString(p.Category.Name)}}</p>
                    </div>
                </div>

            </div>

            <div class="row tac dplih pos_r product-link">
                <a class="fsz20 a-viewmore" style="border-color: #fff;" href="/Product">Xem nhiều hơn</a>
            </div>
        </div>
        @*<div class="fade-header">
            </div>*@
    </section>

    <!-- About -->
    <section id="about">
        <div class="container"
             ng-app="App"
             ng-controller="NewsViewController">
            <main id="home" class="contents">
                <div class="container">
                    <div class="row" style="text-align: center; display: block; height: 85px;">
                        <h1 class="page-title text-center">Tin tức máy đào bitcoin</h1>
                    </div>
                    <br />
                    <ul class="timeline">
                        <li class="timeline-line"></li>
                        <li class="timeline-item" ng-repeat="n in listNews track by $index">
                            <div class="timeline-badge">
                                <a title="{{n.Date | date : 'MMM d, y' }}"></a>
                            </div>
                            <div class="timeline-panel">
                                <div class="timeline-heading">
                                    <a data-toggle="modal" href="#newsModal" class="a-news" ng-click="viewNews(n)">{{n.Title}}</a>
                                    <div class="timeline-date">
                                        <i class="fa fa-clock-o"></i> {{n.Date | date : "MMM d, y" }}
                                    </div>
                                </div>
                                <div class="timeline-content" style="padding-bottom: 0">
                                    <p style="margin-bottom: 0">
                                        <img class="img-responsive" src="{{n.BannerImage}}">
                                    </p>
                                </div>
                                <div class="timeline-content" ng-bind-html="n.ShortContent">
                                </div>
                                <div class="timeline-footer">
                                    <small class="text-muted">Timeline Footer</small>
                                </div>
                            </div>
                        </li>
                    </ul>

                </div>
            </main>

            <div class="row tac dplih pos_r product-link">
                <a class="fsz20 a-viewmore" style="color: #333;" href="/News">Xem nhiều hơn</a>
            </div>

            <!-- Preview -->
            <div class="portfolio-modal modal fade"
                 id="newsModal"
                 tabindex="-1" role="dialog"
                 aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="close-modal" data-dismiss="modal">
                            <div class="lr">
                                <div class="rl"></div>
                            </div>
                        </div>
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-8 mx-auto">
                                    <div class="modal-body">
                                        <!-- Project Details Go Here -->
                                        <h2>{{news.Title}}</h2>
                                        <div class="timeline-date" style="font-size: 18px; margin-bottom: 5px;">
                                            <i class="fa fa-clock-o"></i>{{news.Date | date : "MMM d, y" }}
                                        </div>
                                        <div class="detail-wrapper">
                                            <div class="des" ng-bind-html="news.Contents">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </section>

    <!-- Team -->
    <section class="bg-light" id="team">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Phương châm làm việc</h2>
                    <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">
                    <div class="team-member">
                        <img class="mx-auto rounded-circle" src="/assets/img/team/1.jpg" alt="">
                        <h4>Nhanh chóng</h4>
                        <p class="text-muted">Nhanh chóng</p>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="team-member">
                        <img class="mx-auto rounded-circle" src="/assets/img/team/2.jpg" alt="">
                        <h4>Uy tín</h4>
                        <p class="text-muted">Trung thực</p>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="team-member">
                        <img class="mx-auto rounded-circle" src="/assets/img/team/3.jpg" alt="">
                        <h4>Nhiệt tình</h4>
                        <p class="text-muted">Nhiệt tình</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 mx-auto text-center">
                    <p class="large text-muted">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aut eaque, laboriosam veritatis, quos non quis ad perspiciatis, totam corporis ea, alias ut unde.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Clients -->
    <section class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-6">
                    <a href="#">
                        <img class="img-fluid d-block mx-auto" src="/assets/img/logos/AMD_Radeon.png" alt="">
                    </a>
                </div>
                <div class="col-md-3 col-sm-6">
                    <a href="#">
                        <img class="img-fluid d-block mx-auto" src="/assets/img/logos/ant.png" alt="">
                    </a>
                </div>
                <div class="col-md-3 col-sm-6">
                    <a href="#">
                        <img class="img-fluid d-block mx-auto" src="/assets/img/logos/bitcoin.jpg" alt="">
                    </a>
                </div>
                <div class="col-md-3 col-sm-6">
                    <a href="#">
                        <img class="img-fluid d-block mx-auto" src="/assets/img/logos/nvidia.png" alt="">
                    </a>
                </div>
            </div>
        </div>

    </section>

    <!-- Contact -->
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Đăng ký nhận thông báo</h2>
                    <h3 class="section-subheading text-muted">Liên hệ ngay để nhận được bảng báo giá tốt nhất và sớm nhất!</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <form>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input class="form-control" id="name" type="text" placeholder="Your Name" ng-model="fullName" required data-validation-required-message="Please enter your name.">
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" id="email" type="email" placeholder="Your Email" ng-model="email" required data-validation-required-message="Please enter your email address.">
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" id="phone" type="tel" placeholder="Your Phone" ng-model="phone" required data-validation-required-message="Please enter your phone number.">
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <textarea class="form-control" id="message" placeholder="Your Message" ng-model="content" required data-validation-required-message="Please enter a message."></textarea>
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="col-lg-12 text-center">
                                <div id="success"></div>
                                <button id="sendMessageButton" class="btn btn-xl" type="submit" ng-click="sendMessage()">Send Message</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- Portfolio Modals -->
    <!-- Modal 1 -->
    <div class="portfolio-modal modal fade" id="portfolioModal{{$index}}" tabindex="-1" role="dialog" aria-hidden="true"
         ng-repeat="p in listProducts track by $index" ng-show="$index < 6">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="close-modal" data-dismiss="modal">
                    <div class="lr">
                        <div class="rl"></div>
                    </div>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col-lg-8 mx-auto">
                            <div class="modal-body">
                                <!-- Project Details Go Here -->
                                <h2>{{p.Title}}</h2>

                                <div class="product-image">
                                    <div ng-repeat="img in p.Images track by $index">
                                        <img src="{{img.Url}}" alt="Product Image">
                                    </div>
                                </div>
                                <br>
                                <div class="detail-wrapper">
                                    <h4>Thông tin chi tiết</h4>
                                    <div class="des" ng-bind-html="p.Descriptions">
                                    </div>
                                </div>

                                <button class="btn btn-primary" data-dismiss="modal" type="button">
                                    <i class="fa fa-times"></i>
                                    Đóng lại
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
