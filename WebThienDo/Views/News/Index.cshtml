
@{
    ViewBag.Title = "Tin tức";
}

<style>
    .fixed-top {
        position: initial;
    }

    #mainNav {
        background-color: #222222 !important;
    }

    .wrapper {
        width: 100%;
        padding: 100px 100px;
    }
</style>

<div class="wrapper"
     ng-app="App"
     ng-controller="NewsViewController">
    <main id="home" class="contents">
        <div class="container">
            <div class="row" style="text-align: center; display: block; height: 85px;">
                <h1 class="page-title text-center">Tin tức máy đào bitcoin</h1>
            </div>

            <ul class="timeline">
                <li class="timeline-line"></li>
                <li class="timeline-item" ng-repeat="n in listNews track by $index">
                    <div class="timeline-badge"><a title="{{n.Date | date : 'MMM d, y' }}"></a></div>
                    <div class="timeline-panel">
                        <div class="timeline-heading">
                            <a data-toggle="modal" href="#newsModal" class="a-news" ng-click="viewNews(n)">{{n.Title}}</a>
                            <div class="timeline-date"><i class="fa fa-clock-o"></i> {{n.Date | date : "MMM d, y" }}</div>
                        </div>
                        <div class="timeline-content" style="padding-bottom: 0">
                            <p style="margin-bottom: 0"><img class="img-responsive" src="{{n.BannerImage}}"></p>
                        </div>
                        <div class="timeline-content" ng-bind-html="n.ShortContent">
                        </div>
                        <div class="timeline-footer">
                            <small class="text-muted">Timeline Footer</small>
                        </div>
                    </div>
                </li>
            </ul>

            <ul class="timeline">
                <li class="timeline-line"></li><!-- /.timeline-line -->
                <li class="timeline-item block">
                    <div class="timeline-badge"><a rel="tooltip" title="" data-context="inverse" data-container="body" class="border-silc" href="#" data-original-title="block highlight"></a></div>
                    <div class="timeline-panel">
                        <div class="timeline-content">
                            <div class="text-center">
                                <p class="text-center">
                                    <a href="#" class="kit-avatar kit-avatar-64">
                                        <i class="fa fa-android" style="font-size:64px;"></i>
                                    </a>
                                </p>
                                <h4>Become GongKia</h4>
                                <p class="timeline-date text-center">November 1, 2014</p>
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </main>

    <!-- Preview -->
    <div class="portfolio-modal modal fade"
         id="newsModal"
         tabindex="-1" role="dialog"
         aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="close-modal" data-dismiss="modal">
                    <div class="lr">
                        <div class="rl"></div>
                    </div>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col-lg-8 mx-auto">
                            <div class="modal-body">
                                <!-- Project Details Go Here -->
                                <h2>{{news.Title}}</h2>
                                <div class="timeline-date" style="font-size: 18px; margin-bottom: 5px;"><i class="fa fa-clock-o"></i>{{news.Date | date : "MMM d, y" }}</div>
                                <div class="detail-wrapper">
                                    <div class="des" ng-bind-html="news.Contents">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

