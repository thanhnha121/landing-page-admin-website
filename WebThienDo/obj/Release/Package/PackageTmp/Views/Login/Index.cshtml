@{
    ViewBag.Title = "Đăng nhập hệ thống";
}

<style>
    .fixed-top {
        position: initial;
    }

    #mainNav {
        background-color: #222222 !important;
    }

    .wrapper {
        width: 100%;
        text-align: center;
        padding: 100px 100px;
    }

        .wrapper .form-group {
            text-align: left;
        }
</style>

<div class="wrapper"
     ng-app="App"
     ng-controller="LoginController">
    <h1>Đăng nhập quản trị hệ thống</h1>

    <br>
    <br>

    <div class="form-group">
        <div class="row mb5">
            <div class="col-md-4 tl">Tên đăng nhập</div>
            <div class="col-md-4"><input id="Text1" class="form-control" ng-model="username" type="text" placeholder="Tên đăng nhập" maxlength="20" /></div>
        </div>
        <div class="row mb5">
            <div class="col-md-4 tl">Mật khẩu</div>
            <div class="col-md-4"><input id="Password1" class="form-control" ng-model="password" type="password" placeholder="password" maxlength="20" /></div>
        </div>
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4"><input class="btn btn-primary csp" value="Đăng nhập" type="button" ng-click="login()" /></div>
        </div>
    </div>
</div>