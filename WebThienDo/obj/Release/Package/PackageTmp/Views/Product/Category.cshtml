
@{
    ViewBag.Title = "Quản lý - Danh sách Chuyên mục";
}

<style>
    .fixed-top {
        position: initial;
    }

    #mainNav {
        background-color: #222222 !important;
    }

    .wrapper {
        width: 100%;
        padding: 100px 120px;
        margin: 0 -10px;
    }
    .row {
        margin: 10px 0;
    }
    .td-btn {
        float: left;
        display: inline-block;
        width: initial;
        margin-right: 5px;
        max-width: 100%;
        margin-top: 5px;
    }
</style>

<div class="wrapper"
     ng-app="App"
     ng-controller="CategoryController">
    <h2> Danh sách Chuyên mục</h2> 
    <a class="btn btn-warning" href="/Admin" >
        <i class="fa fa-reply"></i> Trở về trang quản lý
    </a>
    <br/>
    <br/>
    <div class="form-group">
        <div class="btn btn-info" ng-click="btnAddNewClick()">
            <i class="fa fa-plus"></i> Thêm Chuyên mục
        </div>
    </div>
    
    <div class="form-group" ng-show="listCategories == undefined || listCategories.length == 0">
        <h6>Danh sách Chuyên mục trống</h6>
    </div>

    <div class="form-group" ng-show="listCategories != undefined && listCategories.length > 0 && mode == ''">
        <table class="table">
            <thead>
            <tr>
                <th>Tên chuyên mục</th>
                <th>Mô tả</th>
                <th>Chức năng</th>
            </tr>
            </thead>
            <tbody>
            <tr ng-repeat="c in listCategories track by $index">
                <td>{{c.Name}}</td>
                <td>{{c.Descriptions}}</td>
                <td>
                    <div class="col-md-6 btn btn-success td-btn" ng-click="editCateClick(c)"><i class="fa fa-edit"></i> Sửa</div>
                    <div class="col-md-6 btn btn-danger td-btn" ng-click="deleteCateClick(c)"><i class="fa fa-close"></i> Xóa</div>
                    <div class="col-md-6 btn btn-info td-btn" ng-click="upCateClick(c)"><i class="fa fa-angle-up"></i> Đẩy lên trên</div>
                    <div class="col-md-6 btn btn-warning td-btn" ng-click="hideCateClick(c)">
                        <i class="fa fa-{{ c.Status == 'show' ? 'eye-slash' : 'eye' }}"></i> {{c.Status == 'show' ? 'Ẩn Chuyên mục' : 'Hiện chuyên mục'}}
                    </div>
                </td>
            </tr>
            </tbody>
        </table>
    </div>

    <div class="form-group" ng-show="mode == 'add'">
        <div class="row">
            <h6>Thêm mới Chuyên mục</h6>
        </div>
        <div class="row">
            <input class="form-control" placeholder="Tên chuyên mục" ng-model="cateName" />
        </div>
        <div class="row">
            <textarea class="form-control" ng-model="cateDes" placeholder="Mô tả"></textarea>
        </div>
        <div class="btn btn-success" ng-click="addNewCateClick()">Thêm mới</div>
        <div class="btn btn-success" ng-click="mode = ''">Hủy</div>
    </div>
    
    <div class="form-group" ng-show="mode == 'edit'">
        <div class="row">
            <h6>Chỉnh sửa Chuyên mục</h6>
        </div>
        <div class="row">
            <input class="form-control" placeholder="Tên chuyên mục" ng-model="cateName" />
        </div>
        <div class="row">
            <textarea class="form-control" ng-model="cateDes" placeholder="Mô tả"></textarea>
        </div>
        <div class="btn btn-success" ng-click="saveCateClick()">Lưu lại</div>
        <div class="btn btn-success" ng-click="mode = ''">Hủy</div>
    </div>
    

</div>
